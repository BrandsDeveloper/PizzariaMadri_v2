<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.promocoes">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/promo01"
            android:layout_width="235dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carrossel01"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/promo02"
            android:layout_width="235dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carrossel02"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/promo01" />

        <ImageView
            android:id="@+id/promo03"
            android:layout_width="235dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carrossel03"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/promo02" />


        <ImageView
            android:id="@+id/promo04"
            android:layout_width="235dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_border"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carrossel04"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/promo03" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>

</ScrollView>