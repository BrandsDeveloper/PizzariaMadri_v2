<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.conta">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1Conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2Conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />


    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/out_medium"
        android:text="@string/Hello"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meusDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/out_semibold"
        android:text="@string/meusDados"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/hi" />

    <ImageView
        android:id="@+id/seta01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/meusDados"
        app:layout_constraintTop_toBottomOf="@+id/hi"
        app:srcCompat="@drawable/arrow_forward_ios_24" />

    <View
        android:id="@+id/line01"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#737373"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/meusDados" />

    <TextView
        android:id="@+id/termos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/out_semibold"
        android:text="@string/termosUso"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/line01" />

    <ImageView
        android:id="@+id/seta02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/termos"
        app:layout_constraintTop_toBottomOf="@+id/line01"
        app:srcCompat="@drawable/arrow_forward_ios_24" />

    <View
        android:id="@+id/line02"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#737373"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/termos" />

    <TextView
        android:id="@+id/privacidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/out_semibold"
        android:text="@string/politcsPrivate"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/line02" />

    <ImageView
        android:id="@+id/seta03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/termos"
        app:layout_constraintTop_toBottomOf="@+id/line02"
        app:srcCompat="@drawable/arrow_forward_ios_24" />

    <View
        android:id="@+id/line03"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#737373"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/privacidade" />

    <TextView
        android:id="@+id/versionApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/out_semibold"
        android:text="@string/aboutVersion"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/line03" />

    <ImageView
        android:id="@+id/seta04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintTop_toBottomOf="@+id/line03"
        app:srcCompat="@drawable/arrow_forward_ios_24" />

    <View
        android:id="@+id/line04"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#737373"
        app:layout_constraintEnd_toStartOf="@+id/guideline2Conta"
        app:layout_constraintStart_toStartOf="@+id/guideline1Conta"
        app:layout_constraintTop_toBottomOf="@+id/versionApp" />

</android.support.constraint.ConstraintLayout>